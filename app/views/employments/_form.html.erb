<%= form_for @employment do |f| %>

  <div class="well">
  </div>

  <div class="form-group">
    <%= f.label :person_id %>
    <em><%= f.collection_select(:person_id, Person.all, :id, :full_name, {include_blank: true}, {class: "form-control"} ) %></em>
  </div>
  <div class="form-group">
    <%= f.label :organization_id %>
    <em><%=f.collection_select(:organization_id, Organization.all, :id, :name, {include_blank: true}, {class:"form-control"})%></em>
  </div>

  <div class="form-group">
    <%= f.label :job_title_id %>
    <em><%= f.collection_select(:job_title_id, JobTitle.all, :id, :name, {include_blank: true}, {class: "form-control"}) %></em>
  </div>
  <% if current_page?(new_employment_path) %>
  <div class="form-group">
    <%= f.label :location_id %>
    <em><%= f.collection_select(:location_id, Location.all, :id, :name, {include_blank: true}, {class: "form-control"}) %></em>
  </div>
  <% else %>
  <div class="form-group">
    <%= f.label :location_id %>
    <em><%= f.collection_select(:location_id, Location.all, :id, :name, {include_blank: true}, {class: "form-control"}) %></em>
  </div>
  <% end %>
  <p>
    <%= f.submit class: "btn btn-primary" %>
  </p>

<% end %>
